 * Project template used for the "Embedded Software Development" course.
 */


#include "helper_library/helper.h"


int main(void)
{
    helper_library_init();
    signed short x,y,zbir,razlika,mnozenje,deljenje, modulo;
    print("Unesite vrednost prve promenljive : ");
    scan("%d", &x);
    print("\n");

    print("Unesite vrednost druge promenljive : ");
    scan("%d", &y);
    print("\n");

    zbir = x + y;
    razlika = x - y;
    mnozenje = x*y;
    deljenje = x / y;
    modulo = x % y;

    print("Zbir dve promenljive je: %d", zbir);
//    print("Zbir dve promenljive je: %d", x+y);
    print("Razlika dve promenljive je: %d", razlika);
    print("Proizvod dve promenljive je: %d", mnozenje);
    print("Kolicnik dve promenljive je: %d", deljenje);
    print("Ostatak prilikom deljenja dve promenljive je: %d", modulo);


}
